<tr>
  <td><%= image_tag pin.image("medium") %></td>
  <td><%= pin.description %></td>
  <td><%= link_to 'Show', pin %></td>

  <% if  %>
	  <td><%= (current_user == pin.user) ?
	  					(link_to 'Edit', edit_pin_path(pin)) :
	  					""
	  %></td>

	  <td><%= (current_user == pin.user) ?
	  					(link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }) :
	  					""
	  %></td>
  <% end %>

</tr>