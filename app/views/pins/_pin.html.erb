<div class="box-container">
	<div class="box">

		<%= link_to (image_tag pin.image(:medium)), pin %>
		<p class="description">
			<%= pin.description %>
		</p>
		<p class="">
			<strong>
				posted by <%= link_to pin.user.name, user_path(pin.user) %>
			</strong>
		</p>

		<p class="">
			<% if  %>
			  <%= (current_user == pin.user) ?
			  					(link_to 'Edit', edit_pin_path(pin)) :
			  					""
			  %>

			  <%= (current_user == pin.user) ?
			  					(link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }) :
			  					""
			  %>
			<% end %>
		</p>

	</div>
</div>