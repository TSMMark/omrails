<div class="box-container">
	<div class="box">
		<%= image_tag pin.image("medium") %>
		<%= pin.description %>
		<%= link_to 'Show', pin %>

		<% if  %>
		  <%= (current_user == pin.user) ?
		  					(link_to 'Edit', edit_pin_path(pin)) :
		  					""
		  %>

		  <%= (current_user == pin.user) ?
		  					(link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }) :
		  					""
		  %>
		<% end %>
	</div>
</div>